TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
ADMIN_USER_IDS=123456789,987654321

# CoinPayments API version: 1 = legacy, 2 = current (recommended for new integrations)
CP_API_VERSION=1

# v1 (legacy) credentials - https://www.coinpayments.net/acct-api-keys
CP_PUBLIC_KEY=your-coinpayments-public-key
CP_PRIVATE_KEY=your-coinpayments-private-key
CP_IPN_SECRET=your-random-ipn-secret-string
CP_MERCHANT_ID=your-merchant-id

# v2 credentials - https://a-docs.coinpayments.net/api/auth/create-integration
CP_CLIENT_ID=your-v2-client-id
# CP_PRIVATE_KEY is reused as the v2 client secret

# Webhook URL (your server's public URL for IPN/webhook callbacks)
IPN_URL=https://your-server.com/ipn
WEBHOOK_PORT=8080
